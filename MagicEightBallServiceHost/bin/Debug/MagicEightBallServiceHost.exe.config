<?xml version="1.0"?>
<configuration>
  <system.serviceModel>
    <services>
      <service name="MagicEightBallService.MagicEightBallService1" >
        <!--behaviorConfiguration="EightBallServiceMEXBehavior">-->
        <!-- <endpoint address="" binding="basicHttpBinding" contract="MagicEightBallService.IEightBall"></endpoint>-->
        <!--使用多重绑定公开单独的服务-->
        <!--启用MEX终结点-->
        <!--<endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange"></endpoint>-->
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:8080/MagicEightBallService"/>
            <add baseAddress="net.tcp://localhost:8099/MagicEightBallService"/>
          </baseAddresses>
        </host>
      </service>
    </services>

    <bindings>
      <basicHttpBinding>
        <binding openTimeout="00:00:30"></binding>
      </basicHttpBinding>
      <netTcpBinding>
        <binding openTimeout="00:00:15"></binding>
      </netTcpBinding>
    </bindings>
    <!--MEX的行为定义-->
    <behaviors>
      <serviceBehaviors>
        <!--不要命名，则获取默认的MEX-->
        <!--<behavior name="EightBallServiceMEXBehavior">-->
        <behavior>
          <serviceMetadata httpGetEnabled="true"/>
        </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.serviceModel>
<startup><supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.0"/></startup></configuration>
